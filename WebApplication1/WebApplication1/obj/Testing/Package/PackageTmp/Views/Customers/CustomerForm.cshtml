@model WebApplication1.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Customers"))
{
   @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(cust => cust.Name)
        @Html.TextBoxFor(cust => cust.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(cust => cust.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(cust => cust.MembershipTypeId)
        @Html.DropDownListFor(cust => cust.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(cust => cust.MembershipTypeId)
    </div>

    <div class="form-group">
        @Html.LabelFor(cust => cust.Birthdate)
        @Html.TextBoxFor(cust => cust.Birthdate, "{0:dd MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(cust => cust.Birthdate)
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.IsSubscribedToNewsLetter) Subscribed To Newsletter
        </label>
        @Html.ValidationMessageFor(cust => cust.MembershipTypeId)
    </div>

    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


